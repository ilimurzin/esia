{
  "name": "ilimurzin/esia",
  "description": "OpenID ESIA authenticating",
  "license": "MIT",
  "keywords": [
    "esia",
    "openid",
    "egov"
  ],
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.0",
    "psr/http-client": "^1.0",
    "psr/http-message": "^2.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "codeception/codeception": "^4.2.2",
    "codeception/module-asserts": "^1.3.1",
    "ergebnis/composer-normalize": "^2.45",
    "phpstan/phpstan": "^2.1",
    "roave/security-advisories": "dev-latest",
    "webmasterskaya/crypto-pro-php-stubs": "^1.0"
  },
  "suggest": {
    "ext-openssl": "SignerPKCS7 support"
  },
  "autoload": {
    "psr-4": {
      "Esia\\": "src/Esia"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    },
    "lock": false,
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan",
    "test": "vendor/bin/codecept run"
  }
}
